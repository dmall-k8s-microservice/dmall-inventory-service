{
    "provider": {
        "name": "inventory_service"
    },
    "consumer": {
        "name": "consumer_app"
    },
    "interactions": [
        {
            "description": "A request for products",
            "request": {
                "method": "GET",
                "path": "/inventories"
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/json;charset=utf-8"
                },
                "body": [
                    {
                        "amount": "100",
                        "inventoryId": "p001",
                        "name": "iphone \u624b\u673a"
                    }
                ],
                "matchingRules": {
                    "body": {
                        "$": {
                            "matchers": [
                                {
                                    "match": "type",
                                    "min": 0
                                }
                            ],
                            "combine": "AND"
                        },
                        "$[*].inventoryId": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "^p[0-9][0-9][0-9]$"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$[*].name": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": ".+"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$[*].amount": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "\\d+"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "The products in Review service are ready"
                }
            ]
        }
    ],
    "metadata": {
        "pact-specification": {
            "version": "3.0.0"
        },
        "pact-jvm": {
            "version": "3.5.0"
        }
    }
}